// For format details, see https://aka.ms/devcontainer.json. For config options, see the README at:
{
  "name": "app",
  "build": {
    "dockerfile": "Dockerfile",
    "cacheFrom": "ghcr.io/pdx-tools/devcontainer"
  },
  "runArgs": ["--network", "host"],
  "mounts": [
    "source=/var/run/docker.sock,target=/var/run/docker.sock,type=bind"
  ],
  "containerEnv": {
    "CROSS_CONTAINER_IN_CONTAINER": "true"
  },
  "remoteEnv": {
    "EU4_IRONMAN_TOKENS": "${containerWorkspaceFolder}/assets/tokens/eu4.txt",
    "HOI4_IRONMAN_TOKENS": "${containerWorkspaceFolder}/assets/tokens/hoi4.txt",
    "CK3_IRONMAN_TOKENS": "${containerWorkspaceFolder}/assets/tokens/ck3.txt",
    "IMPERATOR_TOKENS": "${containerWorkspaceFolder}/assets/tokens/imperator.txt"
  },

  "features": {
    "ghcr.io/devcontainers/features/docker-outside-of-docker:1": {
      "dockerDashComposeVersion": "v2"
    },
    "ghcr.io/devcontainers/features/git-lfs:1": {}
  },

  "customizations": {
    "vscode": {
      "settings": {
        "editor.defaultFormatter": "esbenp.prettier-vscode",
        "files.associations": {
          "*.css": "tailwindcss"
        },
        "[rust]": {
          "editor.defaultFormatter": "rust-lang.rust-analyzer"
        }
      },
    
      "extensions": [
        "bradlc.vscode-tailwindcss",
        "dbaeumer.vscode-eslint",
        "esbenp.prettier-vscode",
        "rust-lang.rust-analyzer",
        "slevesque.shader",
        "styled-components.vscode-styled-components"
      ]
    }
  },

  "postStartCommand": "just npm-ci",
  "forwardPorts": [3001, 3003, 9000],
  "remoteUser": "node"
}
